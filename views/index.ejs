<!DOCTYPE html>
<html>
<head>
  <title>Find Any Vinyl</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Find Any Vinyl</h1>

  <form method="POST" action="/search">
    <input type="text" name="query" placeholder="Search artist or album..." required />
    <button type="submit">Search</button>
  </form>

  <div class="results">
    <% if (result && result.length > 0) { %>
      <% result.forEach(item => { %>
        <div class="card">
          <% if (item.thumb) { %>
            <img src="<%= item.thumb %>" alt="Cover">
          <% } else { %>
            <div class="no-image">No Image</div>
          <% } %>
          <h2><%= item.title %></h2>
          <p><%= item.format %> | <%= item.year %></p>
          <p><%= item.label %></p>
          <a href="https://www.discogs.com<%= item.url %>" target="_blank">View on Discogs</a>
          <a href="https://www.ebay.co.uk/sch/i.html?_nkw=<%= encodeURIComponent(item.title + ' vinyl') %>" target="_blank">Search on eBay</a>
        </div>
      <% }); %>
    <% } else if (result) { %>
      <p>No results found.</p>
    <% } %>
  </div>
</body>
</html>
